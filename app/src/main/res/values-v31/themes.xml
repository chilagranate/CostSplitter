<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CostSplitter" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@android:color/background_dark</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_animation</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.CostSplitter</item>
    </style>

    <style name="Theme.CostSplitter.NoSplashScreen" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Your regular theme attributes here -->
    </style>
</resources>